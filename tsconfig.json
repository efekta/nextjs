{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@/styles": ["client/assets/styles/style.scss"],
      "@/assets/*": ["client/assets/*"],
      "@client/*": ["client/*"],
      "@/components": ["client/app/components/index.ts"],
      "@/public-app": ["client/app/public/PagesHolder/PagesHolder.tsx"],
      "@/layouts/*": ["client/app/layouts/*"],
      "@/utils": ["client/utils.ts"],
      "@/connection": ["client/Connection.ts"],
      "@/ui": ["client/app/components/UI/index.ts"],
      "@store/*": ["client/store/*"]
    },
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "noImplicitAny": false,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "./src/**/*", "./src/client/resources/images.d.ts"],
  "exclude": ["node_modules", "src/**/*.proto"]
}
